// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  userId String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  civility Int?
  firstname String?
  lastname String?
  fonction String?
  avatar Pictures?
  ordersId String[] @db.ObjectId 
  order Order[] @relation(name: "usersOrder",fields: [ordersId],references:[orderId])
}


model Products {
  productId String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  comment String?
  price Float?
  stock Int? @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  reference References?
  product_picture Pictures[]
  weight Float?
  height Float?
  width Float?
  length Float?
  ordersId String[] @db.ObjectId
  order Order[] @relation(name: "productsOrder",fields: [ordersId],references:[orderId])
  categories Categories[]
}


model Suppliers {
  suppliersId String @id @default(auto()) @map("_id") @db.ObjectId
  raisonSocial String 
  note String?
  informations Informations?
  coordonnees Coordonnees?
  supplier_contact Supplier_contact[]
  legal Legal?
}

model Order {
  orderId String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  comment String?
  address Address
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  started_at DateTime?
  finished_at DateTime?
  authorId String @db.ObjectId
  productsId String[] @db.ObjectId
  products Products[]  @relation(name: "productsOrder",fields: [productsId],references: [productId])
  usersId String[] @db.ObjectId
  users Users[] @relation(name: "usersOrder",fields: [usersId],references: [userId])
  picture_before Pictures[]
  picture_after Pictures[]
}

type Address {
  name_address String 
  street String
  city String
  zip String
}

type Pictures {
  path String
  name String
  format String
  created_at DateTime @default(now())
}

type References {
  id String
  model String
  mark String
}

type Categories {
  name String
  comment String
  created_at DateTime @default(now()) 
  productsId String[] @db.ObjectId
}

type Informations {
  type_supplier Boolean
  society_name String
  site_web String
}

type Coordonnees {
  phone String
  email String
  mobile String
  adress Address[]
}

type Supplier_contact {
  principal_contact Boolean
  firstname String
  lastname String
  email String
  phone String
  mobile String
  fonction String
}

type Legal {
  status String
  siret String
  siren String
  naf String
  capital String
  rcs String
  tva String
}


