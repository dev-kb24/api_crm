{
  "verbose": true,
  "coverageReporters": ["json", "lcov", "text", "clover"],
  "collectCoverage": true,
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "preset": "ts-jest",
  "rootDir": "./src",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom":[
    "**/*.ts",
    "!**/*.spec.ts",
    "!**/utils/types/**",
    "!**/e2e/**",
    "!**/**/dto/**",
    "!**/**/mocks/**",
    "!**/*.module.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/coverage/"
  ],
  "coverageDirectory": "../coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}