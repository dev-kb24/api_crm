{
  "name": "template-crm",
  "version": "0.1.0",
  "engines": {
    "node": "20.11.1",
    "npm":"10.2.4"
  },
  "description": "Ce CRM (Customer Relationship Management) est une application de gestion des relations avec les clients en version 0.1. Il offre les fonctionnalités suivantes : orders, products, users, supplier et mailer.",
  "author": "Dufour Rémi",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "NODE_ENV=dev nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prettier:format": "prettier -w \"src/**/*.ts\" \"tests/**/*.ts\" \"configs/**/*.ts\"",
    "prettier:check": "prettier -c \"src/**/*.ts\" \"tests/**/*.ts\" \"configs/**/*.ts\"",
    "test:unitaire": "jest --config ./configs/tests/jest.config.ts",
    "test:e2e": "NODE_ENV=test jest --config ./configs/tests/e2e.config.ts",
    "test:cucumber": "cucumber-js --require-module ts-node/register --require tests/bdd/**/*.ts tests/bdd/**/*.feature",
    "prisma:generate": "npx prisma generate",
    "prisma:push":"npx prisma db push",
    "prepare": "husky",
    "docker:build:mongo":"docker pull prismagraphql/mongo-single-replica:5.0.3",
    "docker:build:mailhog":"docker pull mailhog/mailhog",
    "docker:build:api": "docker build -t template-crm .",
    "docker:run:env":"docker-compose up -d"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/serve-static": "^4.0.1",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/testing": "^10.3.3",
    "@prisma/client": "^5.10.2",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "handlebars": "^4.7.8",
    "nodemailer": "^6.9.11",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@jest/types": "^29.6.3",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.1",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  }
}
