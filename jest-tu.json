{
  "verbose": true,
  "coverageReporters": ["json", "lcov", "text", "clover"],
  "collectCoverage": true,
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "preset": "ts-jest",
  "rootDir": "./src",
  "coverageDirectory": "../coverage",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom":[
    "mailer/**/*.ts",
    "order/**/*.ts",
    "products/**/*.ts",
    "suppliers/**/*.ts",
    "users/**/*.ts",
    "utils/**/*.ts",
    "!**/utils/types/**",
    "!**/**/dto/**",
    "!**/**/mocks/**",
    "!**/*.module.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/coverage/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
