{
  "verbose": true,
  "collectCoverage": true,
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "preset": "ts-jest",
  "rootDir": "./src",
  "coverageDirectory": "../coverage",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  },
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
